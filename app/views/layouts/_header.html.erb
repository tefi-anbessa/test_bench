<nav class="navbar navbar-expand-md navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand", id: "logo" do %>
      <%= image_tag("favicon.ico") %>
    <% end %>
    <button class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to t('menu.about'), site_about_path,
            class: "nav-link",
            aria: { label: t('menu.about') } %>
        </li>
        <li class="nav-item">
          <%= link_to t('menu.help'), site_help_path,
            class: "nav-link",
            aria: { label: t('menu.help') } %>
        </li>

        <form class="d-flex justify-content-center">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <div class="d-flex justify-content-end">
          <% if user_signed_in? %>
          <li class="nav-item dropdown">
              <%= link_to t('project', scope: 'activerecord.models').pluralize,
                projects_path,
                class: "nav-link",
                aria: { label: t('project', scope: 'activerecord.models').pluralize } %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle"
                  href="#"
                  data-bs-toggle="dropdown"
                  id="user-menu-btn"
                  role="button"
                  aria-expanded="false">
                <%= current_user.name %>
                </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><%= link_to t('menu.profile'),
                    user_path(current_user),
                    class: "dropdown-item" %>
                </li>
                <li><%= link_to t('menu.edit'),
                    edit_user_registration_path,
                    class: "dropdown-item" %>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to t('menu.log_out'),
                    destroy_user_session_path,
                    data: { "turbo-method": :delete },
                    class: "dropdown-item" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to t('menu.log_in'), new_user_session_path %>
            </li>
          <% end %>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#"
                  id="navbarLocaleSelect"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false">
                  <%= flag_icon(flag_code(locale)) %>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% I18n.available_locales.each do |locale| %>
                <li>
                  <%= flag_icon(flag_code(locale)) %>
                  <% if I18n.locale == locale %>
                    <%= t(locale, scope: 'locales') %>
                  <% else %>
                    <%= link_to t(locale, scope: 'locales'),
                                url_for(locale: locale) %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
        </div>
      </ul>
    </div>
  </div>
</nav>
