<% provide(:title, t('.title')) %>
<h2>
  <%= t('.header')%>
</h2>
<div class = "container">
  <div class = 'Listing'>
    <%= search_form_for @q do |f| %>
      <table id='projects' class='table table-striped table-bordered' >
        <thead>
          <%= will_paginate %>
          <tr class="row">
            <th><%= sort_link(@q, :code) %><br>
              <%= f.search_field :code_cont, class: "search_field" %></th>
            <th><%= sort_link(@q, :title) %><br>
              <%= f.search_field :title_cont, class: "search_field" %></th>
            <th><%= sort_link(@q, :description) %><br>
              <%= f.search_field :description_cont, class: "search_field" %></th>
            <th><%= t('table.links')%><br>
              <%= f.submit %></th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |p| %>
            <tr class="row">
              <td class="col col-sm-1"><%= link_to p.code, p, class: "col-sm-2" %></td>
              <td class="col col-sm-3"><%= link_to p.title, p, class: "col-sm-4" %></td>
              <td class="col col-sm-7"><%= link_to p.description, p, class: "col-sm-5" %></td>
              <td class="col col-sm-1">
                <%= link_to project_path(p) do %>
                  <span class="glyphicon glyphicon-eye-open"
                    title=<%= t('actions.show')%>></span>
                <% end %>
                <%= link_to edit_project_path(p) do %>
                  <span class="glyphicon glyphicon-edit"
                    title=<%= t('actions.edit')%>></span>
                <% end %>
                <% if current_user.admin? %>
                  <%= link_to p, method: :delete do %>
                    <span class="glyphicon glyphicon-trash"
                      title=<%= t('actions.delete')%>></span>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate %>

    <% end %>

    <div class="left">
      <%= link_to new_project_path, class: "btn btn-primary actions" do %>
          <%= t('actions.new') + " " + t('activerecord.models.project') %>
          <span class="glyphicon glyphicon-pencil" title="new"></span>
      <% end %>
    </div>
  </div>
</div>
