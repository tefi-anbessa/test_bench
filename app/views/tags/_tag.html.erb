<div id="<%= dom_id tag %>">
  <div class="container-fluid">
    <div class="d-flex flex-row mb-3">
      <p class="p2"><%= t('activerecord.attributes.discipline.code') %>:
      <%= tag.discipline.code %></p>
    </div>
    <div class="d-flex flex-row mb-3">
      <p class="p2"><%= t('activerecord.attributes.tag.full_tag') %>:
        <%= tag.full_tag %></p>
    </div>
    <div class="d-flex flex-row mb-3">
      <p class="p2"><%= t('activerecord.attributes.tag.description') %>:
        <%= tag.description %></p>
    </div>
    <div class="d-flex flex-row mb-3">
      <p class="p2"><%= t('activerecord.attributes.tag.notes') %>:
        <%= tag.notes %></p>
    </div>
    <div class="d-flex flex-row mb-3">
      <p class="p2"><%= t('activerecord.models.project') %>:
        <%= tag.project.code %></p>
    </div>
    <div class="d-flex flex-row mb-3">
      <p class="p2"><%= t('activerecord.attributes.tag.phase') %>:
        <%= tag.phase %></p>
    </div>
  </div>
</div>
